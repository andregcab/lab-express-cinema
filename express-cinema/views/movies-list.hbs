<h1 id="cinema">Ironhack Cinema</h1>

<h3 id="click-link">Click on the movie to check the showtimes!</h3>

<div class="all-the-movies">

{{#each allTheMovies}}

<div class="the-movie">
  <img src="{{this.image}}" alt="">
  <h2>{{this.title}}</h2>
  <a href="/movies/{{this._id}}">See more</a>
</div>


{{/each}}

</div>